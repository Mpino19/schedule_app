<div class="header">
  <h2>スケジュール管理アプリ</h2>
</div>
<div class="container">
  <div class="top">
    <p class="title">予定一覧</p>
    <div class="new_button"><%= link_to "新規追加", :new_event, class:"no_deco_white" %></div>
  </div>
  <div class="center">
    <table>
      <tr>
        <th>ID</th>
        <th>タイトル</th>
        <th>開始日</th>
        <th>終了日</th>
        <th>終日</th>
        <th>更新日時</th>
      </tr>
      <% @events.each do |event| %>
      <div class="events_item">
        <tr>
          <td><%= event.id %></td>
          <td><%= event.name %></td>
          <td><%= event.start_at.strftime("%Y/%m/%d") %></td>
          <td><%= event.finish_at.strftime("%Y/%m/%d") %></td>
          <td><% if event.all_day == true %>
            ○
          <% end %></td>
          <td><%= event.updated_at.strftime("%Y/%m/%d %H:%M") %></td>
          <td><%= link_to "詳細", "/events/#{event.id}" %></td>
          <td><%= link_to "編集", "/events/#{event.id}/edit" %></td>
          <td><%= link_to "削除", "/events/#{event.id}", method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
        </tr>
      </div>
      <% end %>
    </table>
  </div>
  <div class="bottom">
    <p class="total"><%= "予定合計#{@events.count}件" %></p>
    <p class="today">本日の日付<%= Date.current.strftime("%Y/%m/%d") %></p>
  </div>
</div>
